<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
     <link rel="stylesheet" media="all" href="/assets/application.css" data-turbolinks-track="reload" />
    <script src="/assets/application_2.js" data-turbolinks-track="reload"></script>
  </head>

  <body>
    <p id="notice"></p>

<h1>Books</h1>

<table>
<thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <section class="book">
    <% @books.each do |book| %>
      <tr>

        <td><a><%= book.title %></a></td>
        <td><a><%= book.body %></a></td>
        <td><a><%= link_to "Show",book_path(book.id) %></a></td>
        <td><a><%= link_to "Edit",edit_book_path(book.id) %></a>
        </td>
        <td><a><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></a>
        </td>
      </tr>
    <% end %>
  </section>
</tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<label>Title</label>
<%= form_for(@book) do |f| %>
<%= f.text_field :title %>
<label>Body</label>
<%= f.text_area :body %>
<br>
<%= f.submit 'Create Book' %>
<% end %>
  </body>
</html>